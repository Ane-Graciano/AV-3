generator client {
  provider        = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
    url= env("DATABASE_URL")
}

// enums

enum NivelPermissao {
    ADMINISTRADOR
    ENGENHEIRO
    OPERADOR
}

enum ResultadoTeste {
    APROVADO
    REPROVADO
}

enum StatusEtapa {
    PENDENTE
    ANDAMENTO
    CONCLUIDA
}
enum StatusPeca {
    EM_PRODUCAO
    EM_TRANSPORTE
    PRONTA
}

enum TipoAeronave {
    COMERCIAL
    MILITAR
}

enum TipoPeca {
    NACIONAL
    IMPORTADA
}
enum TipoTeste {
    ELETRICO
    HIDRAULICO
    AERODINAMICO
}



// models/ tabelas

model Aeronave{
    id Int @id @default(autoincrement())
    codigo String @unique
    modelo String
    tipo TipoAeronave
    capacidade Int
    alcance Float

    pecas Peca[]
    etapas Etapa[]
    testes Teste[]
    relatorio  Relatorio?
}

model Etapa {
    id Int @id @default(autoincrement())
    nome String
    prazo String
    status StatusEtapa
    funcionarios Funcionario[]

    aeronave Aeronave @relation(fields: [aeronaveId], references: [id])
    aeronaveId Int 
}

model Funcionario {
    id Int @id @default(autoincrement())
    nome String
    telefone String
    endereco String
    usuario String @unique
    senha String
    nivelPermissao NivelPermissao

    etapas Etapa[] 
    testes Teste[]
}

model Peca {
    id Int @id @default(autoincrement())
    nome String
    tipo TipoPeca
    fornecedor String
    status StatusPeca

    aeronave Aeronave @relation(fields: [aeronaveId], references: [id])
    aeronaveId Int 
}

model Relatorio {
  id         Int        @id @default(autoincrement())
  data       DateTime   @default(now())
  conteudo   String?
  nomeArquivo String?

  aeronave   Aeronave @relation(fields: [aeronaveId], references: [id])
  aeronaveId Int   @unique
}


model Teste {
    id Int @id @default(autoincrement())
    tipo TipoTeste
    resultado ResultadoTeste
    data DateTime
    observacao String?
    
    funcionario Funcionario @relation(fields: [funcionarioId], references: [id])
    funcionarioId Int 

    aeronave Aeronave @relation(fields: [aeronaveId], references: [id])
    aeronaveId Int 
}